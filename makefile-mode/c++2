EXE=${1:demo}.exe
OBJS=$1.o
CC=g++
CFLAGE= -Wall -g -std=c++11

\$(EXE):\$(OBJS)
	\$(CC) \$(OBJS) -o \$(EXE)

\$(OBJS):$1.cpp ${2:head}.h     ;       \$(CC) \$(CFLAGE) -c $1.cpp

.PHONY:clean
clean:
	-rm \$(OBJS) \$(EXE)
$0